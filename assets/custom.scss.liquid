.header {
    .header-top {
        background: #F0FAF5;
    }
    .header-bottom {
        margin-bottom: 60px;
        border-bottom: 1px solid #dedede;
            .site-nav {
                margin-left: -7rem;
                margin-right: -10rem;
                ul {
                     li {
                         a {
                        margin: -10px;
                        font-size: 16px;
                        style: normal;
                        line-height: 26px;
                        font-weight: 400px;
                    }
                }
            }
        }
    }
}

.product-carousel-container {
    margin-top: 150px;
    .lezada-loadmore-button {
        color: #00a651;
        border: 2px solid #00A651;
        padding: 15px;
        padding-left: 30px;
        padding-right: 30px;

        &:hover {
            color: #fff;
            background: #00A651;
            padding: 15px;
            padding-left: 30px;
            padding-right: 30px;
        }
    }
}

.cta-area {
    .subscription-form {
        border-bottom: 1px solid #dedede;
    }
    .cta-title {
        h2 {
            margin-bottom: 10px;
        }
        p {
            line-height: 30px;
        }
    }
}

.footer-container {
    .copyright-text {
        p {
            width: 500px;
            margin-right: -400px;
            font-size: 13px;
            line-height: 30px;
            color: gray;
            margin-top: 5px;
        }
    }
    .payments-logo {
        font-size: 25px;
        margin-top: 10px;
        color: #303D3A;    
    }

    .logo {
        margin-bottom: 10px;
    }

    .col {
        .widget-title {
            padding-left: 230px;
            padding-right: 0px;
            margin-left: -100px;
        }
        .footer-nav-container {
            padding-left: 230px;
            padding-right: 0px;
            margin-left: -100px;
            color: #E2E4E3;

            &:hover {
                color: #00A651;
                border: none;
            }
            }
        }
    hr {
        border-top: 1px solid #dedede;
    }
    .social-logo {
        font-size: 25px;
        text-align: center;
        margin: 30px;
        color: #fff;
        .facebook {
            &:hover {
                color: #00A651;
            }
        }
        .instagram {
            &:hover {
                color: #00A651;
            }
        }
       
    }

    .disclaimer {
        text-align: center;
        color: #B1B5B4;
        font-size: 11px;
    }
}

.video-section-area {
    .lezada-button {
        padding-right: 30px;
        padding-left: 30px;
        padding-top: 20px;
        padding-bottom: 20px;
    }
    .text-block {
        p {
            line-height: 35px;
        }
        h1 {
            font-weight: bold;
        }
    }
}

