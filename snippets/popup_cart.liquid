{% if settings.product_cart_type == 'ajax_popup_cart' %}
<!-- modalAddToCart -->
<div class="modal fade ajax-popup" id="modalAddToCart" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog white-modal modal-md">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class="col-md-9">
            <div class="modal-message-holder">
        <p class="success-message"><i class="fa fa-check"></i> Product successfully added to your shopping cart.</p>
      </div>
    </div>
    <div class="col-md-3">
    <div class="modal-close-btn">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="ion-android-close"></i></button>
    </div>
  </div>
</div>
<hr>
<div class="row mb-35">
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-4">
        <img class="popupimage" src="">  
            </div>
        <div class="col-md-8">
            <h5 class="productmsg"></h5>
            <p>
              <span class="pop_current_price"> </span>
            </p>
          </div>
        </div>
            </div>
            <div class="col-md-6 d-flex justify-content-center align-items-center popup-content">
              <div class="modal-total-price">
            <p class="total_item"> {{ settings.total_cart_before_title }} <span class="cart_count bigcounter">{{ cart.item_count }}</span> {{ settings.total_cart_after_title }}</p>
            <p class="cart_total"> <span class="total_price_label">{{ settings.total_price_label }} </span> <span class="shopping-cart__total">{{ cart.total_price | money }}</span></p>
          </div>
        </div>
      </div>
      <hr>
      <div class="modal-action-btn">
        <div class="row">
          <div class="col-md-4 popup-holder">
            <button type="button" class="popup-cont" data-dismiss="modal" aria-hidden="true"><i class="fa fa-angle-left" aria-hidden="true"></i> {{ settings.continue_shopping }}</button>
                </div>
                <div id="content-mobile">
                  <hr>
                </div>
                <div class="col-md-8">
                  <div class="row">
                    <div class="col-md-6 pt-xs-20">
                      <a href="/cart" class="a w-100">{{ settings.view_cart_button2 }}</a>
                    </div>
                    <div class="col-md-6 pt-xs-20">
                      <a href="/checkout" class="b w-100">{{ settings.checkout_button2 }}</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
<!-- modalAddToCart -->
{% endif %}
<!-- modalAddToCart Error -->
<div class="modal fade ajax-popup error-ajax-popup" id="modalAddToCartError" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog white-modal modal-md">
    <div class="modal-content ">
      <div class="modal-body">
        <div class="modal-content-text">
          <p class="error_message"></p>
        </div>
        <div class="modal-close">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times-circle"></i></button>
        </div>
      </div>
    </div>
  </div>
</div>